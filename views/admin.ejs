<%- include('header') -%> <%- include('navbar') -%>
			<button class="standard-btn" id="newMatchBtn">New match</button>
			<section class="list-container">
					<% matches.forEach(match => { %>
				<div class="list-item">
					<div class="first-col">
						<p class="teams"><%= match.homeTeam%> - <%= match.awayTeam%></p>
						<p class="date"><%= match.date %></p>
					</div>
					<div class="input-col">
						<input type="text" value="<%= match.homeScore %>" />
						<p class="input-separator">-</p>
						<input type="text" value="<%= match.awayScore %>" />
					</div>
					<div class="last-col">
						<button class="list-item-btn">Set result</button>
						<button class="list-item-btn">Remove</button>
					</div>
				</div>
			
				<% })%>
			</section>

		<div class="newMatchContainer" id="newMatchContainer"></div>
		<form class="newMatchInputContainer" id="newMatchInputContainer">
			<h2>New match</h2>
			<input
				type="text"
				class="newMatchTextInput"
				placeholder="Home team"
				required
			/>
			<input
				type="text"
				class="newMatchTextInput"
				placeholder="Away team"
				required
			/>
			<input
				type="date"
				id="newMatchDatePicker"
				value="2021-10-22"
				min="2021-01-01"
				max="2100-12-31"
			/>
			<button id="newMatchBtn" class="standard-btn">Add match</button>
		</form>

		<script>
			document.getElementById('newMatchBtn').onclick = function () {
				document.getElementById('newMatchContainer').style.display = 'block';
				document.getElementById('newMatchInputContainer').style.display =
					'flex';
			};
			document.getElementById('newMatchContainer').onclick = function () {
				document.getElementById('newMatchContainer').style.display = 'none';
				document.getElementById('newMatchInputContainer').style.display =
					'none';
			};
		</script>
	</body>
</html>
