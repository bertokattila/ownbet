<%- include('header') -%> <%- include('navbar') -%>
<section class="list-container">
	<% matches.forEach(match => { %>
	<div class="list-item">
		<div class="first-col">
			<p class="teams"><%= match.homeTeam%> - <%= match.awayTeam%></p>
			<p class="date">
				<%=moment(match.date).format('YYYY. MM. DD. hh:mm'); %>
			</p>
		</div>
		<div class="input-col">
			<input type="text" value="<%= match.result.homeScore %>" />
			<p class="input-separator">-</p>
			<input type="text" value="<%= match.result.awayScore %>" />
		</div>
		<div class="last-col">
			<button class="list-item-btn">Save bet</button>
		</div>
	</div>
	<% })%>
</section>
<%- include('footer') -%>
